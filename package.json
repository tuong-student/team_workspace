{
	"name": "jira-clone",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"prepare": "husky install",
		"api:dev": "(cd apps/api; air; cd ..; cd ..)"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.5.0",
		"eslint-config-custom": "workspace:*",
		"husky": "^8.0.0",
		"lint-staged": "^13.2.0",
		"prettier": "^2.8.4",
		"turbo": "^1.8.5"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"packageManager": "pnpm@7.8.0",
	"lint-staged": {
		"*.{ts,tsx,js,jsx}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{json,yaml,yml}": [
			"prettier --write"
		],
		"*.go": [
			"gofmt"
		]
	}
}
